          </svg>
        </div>
      </div>
      
    </div>
  </section>

  <!-- DEMO SECTION -->
  <section class="min-h-screen flex items-center justify-center py-20 px-6 relative">
    
    <div class="container max-w-7xl relative z-10">
      
      <h2 class="text-sm uppercase tracking-wider text-gray-500 text-center mb-16 font-semibold">
        Playground en Vivo
      </h2>
      
      <div class="grid lg:grid-cols-2 gap-12 items-start">
        
        <!-- LEFT: Recording Area -->
        <div class="space-y-8">
          
          <!-- Record Button Card -->
          <div class="glass-strong rounded-3xl p-12 text-center holographic card-hover">
            <button 
              id="recordBtn" 
              class="relative w-48 h-48 mx-auto rounded-full flex items-center justify-center group transition-all duration-300 hover:scale-110"
              aria-label="Grabar audio"
            >
              <!-- Pulsing Rings -->
              <div class="absolute inset-0 rounded-full bg-gradient-to-br from-purple-500 to-pink-500 opacity-60 blur-2xl group-hover:blur-3xl transition-all duration-300 pulse-glow"></div>
              <div class="absolute inset-2 rounded-full bg-gradient-to-br from-purple-600 to-pink-600 opacity-40 blur-xl"></div>
              
              <!-- Button Surface -->
              <div class="relative w-44 h-44 rounded-full glass flex items-center justify-center border-2 border-white/20 group-hover:border-white/40 transition-all">
                <!-- Microphone Icon -->
                <svg xmlns="http://www.w3.org/2000/svg" class="w-20 h-20 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z" />
                </svg>
              </div>
