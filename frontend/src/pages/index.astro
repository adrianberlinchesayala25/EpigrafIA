            <p class="mt-8 text-gray-400 text-sm">Pulsa para grabar 3 segundos</p>
          </div>
          
          <!-- Waveform Card -->
          <div class="glass rounded-2xl p-6 card-hover">
            <h3 class="text-sm uppercase tracking-wider text-gray-500 mb-4 font-semibold">Forma de Onda</h3>
            <canvas id="waveform" class="w-full h-32 rounded-lg bg-black/30"></canvas>
          </div>
          
          <!-- File Upload Card -->
          <label class="block glass rounded-2xl p-8 text-center cursor-pointer hover:bg-white/10 transition-all border border-white/5 hover:border-purple-500/30 card-hover">
            <div class="flex flex-col items-center gap-4">
              <div class="w-16 h-16 rounded-full bg-gradient-to-br from-purple-500/20 to-pink-500/20 flex items-center justify-center">
                <svg class="w-8 h-8 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
                </svg>
              </div>
              <div>
                <p class="text-white font-semibold mb-1">Arrastra un archivo aqu√≠</p>
                <p class="text-sm text-gray-400">o haz clic para seleccionar</p>
              </div>
            </div>
            <input type="file" id="fileInput" accept="audio/*" class="hidden">
          </label>
          
        </div>
        
        <!-- RIGHT: Results Area -->
        <div class="space-y-6">
          
          <!-- Status Card -->
          <div id="statusCard" class="glass-strong rounded-2xl p-6 text-center border border-purple-500/20">
            <div class="flex items-center justify-center gap-3">
              <div class="w-3 h-3 bg-purple-500 rounded-full animate-pulse"></div>
              <span class="text-sm text-gray-300" id="statusText">Cargando modelos de IA...</span>
            </div>
          </div>
          
          <!-- Language Result Card (hidden initially) -->
          <div id="languageCard" class="hidden fade-in">
            <!-- Will be populated by JavaScript -->
          </div>
          
          <!-- Accent Result Card (hidden initially) -->
          <div id="accentCard" class="hidden fade-in">
            <!-- Will be populated by JavaScript -->
          </div>
          
        </div>
        
      </div>
    </div>
  </section>

  <!-- FOOTER -->
  <footer class="border-t border-white/5 py-12 relative z-10">
    <div class="container mx-auto px-6">
      <div class="flex flex-col md:flex-row justify-between items-center gap-6 text-sm text-gray-500">
        <div class="flex items-center gap-3">
          <img src="/logo.svg" alt="EpigrafIA" class="h-8 w-8">
          <span>¬© 2024 EpigrafIA - Deep Learning Audio</span>
        </div>
        <a href="https://github.com/adrianberlinchesayala25/EpigrafIA" target="_blank" 
           class="hover:text-purple-400 transition-colors flex items-center gap-2">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
          GitHub
        </a>
      </div>
    </div>
  </footer>

  <!-- JAVASCRIPT -->
  <script>
    import { loadModels, getModels } from '../utils/modelLoader.js';
    import { extractMFCC, drawWaveform } from '../utils/audioProcessing.js';
    import { startRecording, loadAudioFile, isRecordingSupported } from '../scripts/audio.js';

    // ========== CUSTOM CURSOR ==========
    const cursor = document.getElementById('custom-cursor');
    let mouseX = 0, mouseY = 0;
    let cursorX = 0, cursorY = 0;

    document.addEventListener('mousemove', (e) => {
      mouseX = e.clientX;
      mouseY = e.clientY;
    });

    function animateCursor() {
      cursorX += (mouseX - cursorX) * 0.2;
      cursorY += (mouseY - cursorY) * 0.2;
      cursor.style.left = cursorX + 'px';
      cursor.style.top = cursorY + 'px';
      
      // Create trail
      if (Math.random() > 0.8) {
        const trail = document.createElement('div');
        trail.className = 'cursor-trail';
        trail.style.left = cursorX + 'px';
        trail.style.top = cursorY + 'px';
        document.body.appendChild(trail);
        setTimeout(() => trail.remove(), 600);
      }
      
      requestAnimationFrame(animateCursor);
    }
    animateCursor();

    // Hover effect
    document.querySelectorAll('button, a, label').forEach(el => {
      el.addEventListener('mouseenter', () => cursor.classList.add('hover'));
      el.addEventListener('mouseleave', () => cursor.classList.remove('hover'));
    });

    // ========== PARTICLES ==========
    const canvas = document.getElementById('particles-canvas');
    const ctx = canvas.getContext('2d');
    canvas.width = window.innerWidth;
    canvas.height = window.innerHeight;

    const particles = [];
    for (let i = 0; i < 50; i++) {
      particles.push({
        x: Math.random() * canvas.width,
        y: Math.random() * canvas.height,
        size: Math.random() * 2 + 1,
        speedY: Math.random() * 0.5 + 0.2,
        speedX: (Math.random() - 0.5) * 0.3,
        opacity: Math.random() * 0.5 + 0.2
      });
    }

    function drawParticles() {
      ctx.clearRect(0, 0, canvas.width, canvas.height);
      
      particles.forEach(p => {
        ctx.beginPath();
        ctx.arc(p.x, p.y, p.size, 0, Math.PI * 2);
        ctx.fillStyle = `rgba(139, 92, 246, ${p.opacity})`;
        ctx.fill();
        
        p.y -= p.speedY;
        p.x += p.speedX;
        
        if (p.y < 0) p.y = canvas.height;
        if (p.x < 0) p.x = canvas.width;
        if (p.x > canvas.width) p.x = 0;
      });
      
      requestAnimationFrame(drawParticles);
    }
    drawParticles();

    window.addEventListener('resize', () => {
      canvas.width = window.innerWidth;
      canvas.height = window.innerHeight;
    });

    // ========== AUDIO APP ==========
    const LABELS = {
      language: ['Espa√±ol', 'Ingl√©s', 'Franc√©s', 'Alem√°n'],
      accent: ['Espa√±a', 'M√©xico', 'UK', 'USA', 'Francia', 'Quebec', 'Alemania', 'Austria']
    };

    const recordBtn = document.getElementById('recordBtn');
    const fileInput = document.getElementById('fileInput');
    const waveformCanvas = document.getElementById('waveform');
    const statusText = document.getElementById('statusText');
    const languageCard = document.getElementById('languageCard');
    const accentCard = document.getElementById('accentCard');

    let modelsReady = false;
    let isRecording = false;

    // Initialize
    async function init() {
      if (!isRecordingSupported()) {
        updateStatus('‚ùå Tu navegador no soporta grabaci√≥n de audio', 'error');
        recordBtn.disabled = true;
        return;
      }

      try {
        updateStatus('‚è≥ Cargando modelos de IA...', 'loading');
        await loadModels();
        modelsReady = true;
        updateStatus('‚úÖ Listo para analizar audio', 'success');
      } catch (error) {
        console.error('Error loading models:', error);
        updateStatus('‚ö†Ô∏è Modelos no encontrados - Entrena los modelos primero', 'warning');
      }
    }

    // Record Button
    recordBtn.addEventListener('click', async () => {
      if (!modelsReady || isRecording) return;

      try {
        isRecording = true;
        recordBtn.style.transform = 'scale(0.95)';
        updateStatus('üéôÔ∏è Grabando audio (3 segundos)...', 'recording');

        const audioBuffer = await startRecording(3);

        waveformCanvas.width = waveformCanvas.offsetWidth * 2;
        waveformCanvas.height = waveformCanvas.offsetHeight * 2;
        drawWaveform(audioBuffer, waveformCanvas);

        await processAudio(audioBuffer);

      } catch (error) {
        console.error('Recording error:', error);
        updateStatus(`‚ùå ${error.message}`, 'error');
      } finally {
        isRecording = false;
        recordBtn.style.transform = 'scale(1)';
      }
    });

    // File Upload
    fileInput.addEventListener('change', async (e) => {
      const file = e.target.files[0];
      if (!file || !modelsReady) return;

      try {
        updateStatus('üìÇ Cargando archivo...', 'loading');
        const audioBuffer = await loadAudioFile(file);

        waveformCanvas.width = waveformCanvas.offsetWidth * 2;
        waveformCanvas.height = waveformCanvas.offsetHeight * 2;
        drawWaveform(audioBuffer, waveformCanvas);

        await processAudio(audioBuffer);

      } catch (error) {
        console.error('File error:', error);
        updateStatus(`‚ùå ${error.message}`, 'error');
      }
    });

    // Process Audio
    async function processAudio(audioBuffer) {
      try {
        updateStatus('üîÑ Extrayendo caracter√≠sticas MFCC...', 'loading');
        const features = await extractMFCC(audioBuffer);

        updateStatus('üß† Ejecutando redes neuronales...', 'loading');
        const { languageModel, accentModel } = getModels();

        const langPred = languageModel.predict(features);
        const accentPred = accentModel.predict(features);

        const languageProbs = await langPred.data();
        const accentProbs = await accentPred.data();

        displayResults(languageProbs, accentProbs);
        updateStatus('‚úÖ An√°lisis completado', 'success');

        features.dispose();
        langPred.dispose();
        accentPred.dispose();

      } catch (error) {
        console.error('Processing error:', error);
        updateStatus(`‚ùå Error: ${error.message}`, 'error');
      }
    }

    // Display Results
    function displayResults(languageProbs, accentProbs) {
      const langResults = Array.from(languageProbs).map((prob, i) => ({
        label: LABELS.language[i],
        probability: prob
      })).sort((a, b) => b.probability - a.probability);

      const topLang = langResults[0];

      languageCard.innerHTML = `
        <div class="glass-strong rounded-2xl p-8 border-l-4 border-green-500/50 card-hover holographic">
          <div class="flex justify-between items-center mb-6">
            <span class="text-sm text-gray-400 uppercase tracking-wider font-semibold">Idioma Detectado</span>
            <span class="text-3xl font-bold text-green-400">${(topLang.probability * 100).toFixed(1)}%</span>
          </div>
          <h3 class="text-4xl font-black mb-8 gradient-text">${topLang.label}</h3>
          <div class="space-y-4">
            ${langResults.map(r => `
              <div>
                <div class="flex justify-between text-sm mb-2">
                  <span class="text-gray-200 font-medium">${r.label}</span>
                  <span class="text-gray-400">${(r.probability * 100).toFixed(1)}%</span>
                </div>
                <div class="w-full bg-white/5 rounded-full h-2.5 overflow-hidden progress-bar">
                  <div class="h-full bg-gradient-to-r from-green-500 to-emerald-500 rounded-full transition-all duration-1000 ease-out" style="width: ${r.probability * 100}%"></div>
                </div>
              </div>
            `).join('')}
          </div>
        </div>
      `;
      languageCard.classList.remove('hidden');

      const accentResults = Array.from(accentProbs).map((prob, i) => ({
        label: LABELS.accent[i],
        probability: prob
      })).sort((a, b) => b.probability - a.probability);

      const topAccent = accentResults[0];

      accentCard.innerHTML = `
        <div class="glass-strong rounded-2xl p-8 border-l-4 border-blue-500/50 card-hover holographic">
          <div class="flex justify-between items-center mb-6">
            <span class="text-sm text-gray-400 uppercase tracking-wider font-semibold">Acento Probable</span>
            <span class="text-3xl font-bold text-blue-400">${(topAccent.probability * 100).toFixed(1)}%</span>
          </div>
          <h3 class="text-4xl font-black mb-8 gradient-text">${topAccent.label}</h3>
          <div class="space-y-4">
            ${accentResults.slice(0, 4).map(r => `
              <div>
                <div class="flex justify-between text-sm mb-2">
                  <span class="text-gray-200 font-medium">${r.label}</span>
                  <span class="text-gray-400">${(r.probability * 100).toFixed(1)}%</span>
                </div>
                <div class="w-full bg-white/5 rounded-full h-2.5 overflow-hidden progress-bar">
                  <div class="h-full bg-gradient-to-r from-blue-500 to-cyan-500 rounded-full transition-all duration-1000 ease-out" style="width: ${r.probability * 100}%"></div>
                </div>
              </div>
            `).join('')}
          </div>
        </div>
      `;
      accentCard.classList.remove('hidden');
    }

    // Update Status
    function updateStatus(message, type = 'info') {
      const colors = {
        info: 'text-gray-300',
        success: 'text-green-400',
        error: 'text-red-400',
        warning: 'text-yellow-400',
        loading: 'text-purple-400',
        recording: 'text-red-400'
      };
      statusText.textContent = message;
      statusText.className = `text-sm ${colors[type]}`;
    }

    init();
  </script>

</body>
</html>
