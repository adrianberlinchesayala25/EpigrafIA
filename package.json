{
  "name": "epigrafia",
  "version": "1.0.0",
  "description": "Detecci√≥n inteligente de idioma y acento usando Deep Learning",
  "type": "module",
  "scripts": {
    "start": "concurrently \"npm run backend\" \"npm run dev:frontend\"",
    "dev": "npm run start",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "cd frontend && npm run build",
    "preview": "cd frontend && npm run preview",
    "backend": "python -m uvicorn backend.main:app --host 0.0.0.0 --port 8000",
    "install:frontend": "cd frontend && npm install",
    "install:python": "pip install -r requirements.txt",
    "setup": "npm run install:frontend && npm run install:python && npm install concurrently --save-dev"
  },
  "keywords": [
    "audio",
    "deep-learning",
    "language-detection",
    "accent-detection",
    "tensorflow",
    "astro"
  ],
  "author": "Adrian Berlinches",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/adrianberlinchesayala25/EpigrafIA"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
